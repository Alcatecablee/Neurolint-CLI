{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neurolint.dev/schemas/neurolint-security-report.schema.json",
  "title": "NeuroLint Security Report",
  "description": "Schema for NeuroLint CLI security scan results including IoC detection, CVE analysis, and incident response data",
  "type": "object",
  "required": ["version", "timestamp", "scanMode", "summary"],
  "properties": {
    "version": {
      "type": "string",
      "description": "NeuroLint CLI version that generated this report",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the scan was performed"
    },
    "scanMode": {
      "type": "string",
      "enum": ["quick", "standard", "deep", "paranoid"],
      "description": "Scan depth level used"
    },
    "targetPath": {
      "type": "string",
      "description": "Root directory or file path that was scanned"
    },
    "summary": {
      "type": "object",
      "required": ["totalFiles", "filesScanned", "findingsCount"],
      "properties": {
        "totalFiles": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of files in target path"
        },
        "filesScanned": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files actually scanned"
        },
        "filesSkipped": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files skipped (binary, node_modules, etc.)"
        },
        "findingsCount": {
          "type": "object",
          "properties": {
            "critical": { "type": "integer", "minimum": 0 },
            "high": { "type": "integer", "minimum": 0 },
            "medium": { "type": "integer", "minimum": 0 },
            "low": { "type": "integer", "minimum": 0 },
            "info": { "type": "integer", "minimum": 0 }
          }
        },
        "scanDuration": {
          "type": "number",
          "description": "Scan duration in milliseconds"
        },
        "compromiseIndicators": {
          "type": "boolean",
          "description": "Whether active compromise indicators were detected"
        }
      }
    },
    "findings": {
      "type": "array",
      "description": "List of security findings",
      "items": {
        "type": "object",
        "required": ["id", "severity", "category", "filePath", "message"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique finding identifier (e.g., IOC-001, CVE-2025-55182)"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"]
          },
          "category": {
            "type": "string",
            "enum": [
              "ioc-signature",
              "behavioral-pattern",
              "cve-indicator",
              "dependency-vulnerability",
              "baseline-mismatch",
              "obfuscation",
              "exfiltration",
              "persistence",
              "credential-leak",
              "code-injection"
            ]
          },
          "filePath": {
            "type": "string",
            "description": "Relative path to the affected file"
          },
          "lineNumber": {
            "type": "integer",
            "minimum": 1,
            "description": "Line number where the issue was detected"
          },
          "columnNumber": {
            "type": "integer",
            "minimum": 0,
            "description": "Column number where the issue was detected"
          },
          "message": {
            "type": "string",
            "description": "Human-readable description of the finding"
          },
          "codeSnippet": {
            "type": "string",
            "description": "Relevant code snippet for context"
          },
          "cveId": {
            "type": "string",
            "pattern": "^CVE-\\d{4}-\\d{4,}$",
            "description": "Associated CVE identifier if applicable"
          },
          "cvssScore": {
            "type": "number",
            "minimum": 0,
            "maximum": 10,
            "description": "CVSS v3.1 base score"
          },
          "iocSignature": {
            "type": "string",
            "description": "IoC signature ID that matched (e.g., IOC-EVAL-001)"
          },
          "remediation": {
            "type": "string",
            "description": "Recommended fix or mitigation"
          },
          "autoFixAvailable": {
            "type": "boolean",
            "description": "Whether NeuroLint can auto-fix this issue"
          },
          "fixCommand": {
            "type": "string",
            "description": "CLI command to auto-fix if available"
          },
          "references": {
            "type": "array",
            "items": { "type": "string", "format": "uri" },
            "description": "URLs to relevant documentation or advisories"
          },
          "metadata": {
            "type": "object",
            "description": "Additional finding-specific metadata",
            "additionalProperties": true
          }
        }
      }
    },
    "cveAnalysis": {
      "type": "object",
      "description": "CVE-specific analysis results",
      "properties": {
        "vulnerablePackages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "installedVersion": { "type": "string" },
              "patchedVersion": { "type": "string" },
              "cveIds": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        "affectedFiles": {
          "type": "array",
          "items": { "type": "string" }
        },
        "exploitationLikelihood": {
          "type": "string",
          "enum": ["confirmed", "high", "medium", "low", "none"]
        }
      }
    },
    "baselineComparison": {
      "type": "object",
      "description": "Baseline integrity verification results",
      "properties": {
        "baselineFile": { "type": "string" },
        "baselineTimestamp": { "type": "string", "format": "date-time" },
        "filesModified": { "type": "integer", "minimum": 0 },
        "filesAdded": { "type": "integer", "minimum": 0 },
        "filesDeleted": { "type": "integer", "minimum": 0 },
        "unauthorizedChanges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filePath": { "type": "string" },
              "changeType": { "type": "string", "enum": ["modified", "added", "deleted"] },
              "previousHash": { "type": "string" },
              "currentHash": { "type": "string" },
              "suspicious": { "type": "boolean" }
            }
          }
        }
      }
    },
    "incidentResponse": {
      "type": "object",
      "description": "Incident response recommendations",
      "properties": {
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "informational"]
        },
        "immediateActions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "containmentSteps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "eradicationSteps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "recoverySteps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "lessonsLearned": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
